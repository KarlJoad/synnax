#!/usr/bin/env sh

# Directory holding the called script
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

SYNNAX_MODULES_DIR="$SCRIPT_DIR/modules"

GUILE_LOAD_COMPILED_PATH="$SYNNAX_MODULES_DIR${GUILE_LOAD_COMPILED_PATH:+:}$GUILE_LOAD_COMPILED_PATH"
GUILE_LOAD_PATH="$SYNNAX_MODULES_DIR${GUILE_LOAD_PATH:+:}$GUILE_LOAD_PATH"
export GUILE_LOAD_COMPILED_PATH GUILE_LOAD_PATH

exec "$@"
